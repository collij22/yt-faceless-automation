# Faceless YouTube Automation Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# CORE CONFIGURATION
# ============================================

# Directory paths (use absolute paths or relative to project root)
ASSETS_DIR=assets
OUTPUT_DIR=output
CONTENT_DIR=content
DATA_DIR=data
CACHE_DIR=.cache
LOGS_DIR=logs

# FFmpeg configuration
FFMPEG_BIN=ffmpeg
# Optional: specify full path if not in PATH
# FFMPEG_BIN=C:\Program Files\ffmpeg\bin\ffmpeg.exe

# ============================================
# N8N WEBHOOK CONFIGURATION
# ============================================

# TTS Generation Webhook (required)
N8N_TTS_WEBHOOK_URL=https://your-n8n-instance.com/webhook/tts

# YouTube Upload Webhook (required)
N8N_UPLOAD_WEBHOOK_URL=https://your-n8n-instance.com/webhook/youtube-upload

# Asset Download Webhook (optional)
N8N_ASSET_WEBHOOK_URL=https://your-n8n-instance.com/webhook/asset-download

# Error Notification Webhook (optional)
N8N_ERROR_WEBHOOK_URL=https://your-n8n-instance.com/webhook/error-notify

# n8n API credentials (if using n8n MCP)
N8N_API_KEY=
N8N_API_URL=https://your-n8n-instance.com/api/v1

# ============================================
# API KEYS - RESEARCH & CONTENT
# ============================================

# Brave Search API (optional but recommended)
# Get key from: https://api.search.brave.com/app/keys
BRAVE_SEARCH_API_KEY=

# Firecrawl API for web scraping (required for research)
# Get key from: https://firecrawl.dev
FIRECRAWL_API_KEY=

# YouTube Data API v3 (required for competitor analysis)
# Enable in Google Cloud Console
YOUTUBE_API_KEY=

# Google Custom Search API (optional, for additional research)
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# ============================================
# TTS PROVIDER CONFIGURATION
# ============================================

# TTS Provider: elevenlabs, playht, google, azure, aws
TTS_PROVIDER=elevenlabs

# ElevenLabs Configuration
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_MODEL=eleven_monolingual_v1

# PlayHT Configuration
PLAYHT_API_KEY=
PLAYHT_USER_ID=
PLAYHT_VOICE_ID=

# Google Cloud TTS Configuration
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_TTS_KEY_FILE=path/to/service-account.json

# ============================================
# VIDEO PRODUCTION SETTINGS
# ============================================

# Default video settings
DEFAULT_VIDEO_WIDTH=1920
DEFAULT_VIDEO_HEIGHT=1080
DEFAULT_VIDEO_FPS=30
DEFAULT_VIDEO_BITRATE=5000k
DEFAULT_AUDIO_BITRATE=192k
DEFAULT_AUDIO_SAMPLE_RATE=44100

# Video codec settings
VIDEO_CODEC=libx264
VIDEO_PRESET=medium
VIDEO_CRF=23

# Audio normalization
AUDIO_LOUDNESS_TARGET=-14
AUDIO_LOUDNESS_RANGE=7

# ============================================
# CONTENT GENERATION SETTINGS
# ============================================

# Script generation settings
DEFAULT_SCRIPT_LENGTH=1200  # words
DEFAULT_VIDEO_DURATION=600  # seconds (10 minutes)
WORDS_PER_MINUTE=150
HOOK_DURATION=15  # seconds

# SEO settings
MAX_TITLE_LENGTH=60
MAX_DESCRIPTION_LENGTH=1500
MAX_TAGS_COUNT=50
DEFAULT_LANGUAGE=en

# ============================================
# RESEARCH & ANALYTICS
# ============================================

# Research settings
MAX_RESEARCH_RESULTS=100
RESEARCH_CACHE_DAYS=7
COMPETITOR_ANALYSIS_DEPTH=10
TREND_LOOKBACK_DAYS=30

# Scoring weights (0-1, must sum to 1)
SCORE_WEIGHT_RPM=0.25
SCORE_WEIGHT_TREND=0.20
SCORE_WEIGHT_COMPETITION=0.20
SCORE_WEIGHT_VIRALITY=0.20
SCORE_WEIGHT_MONETIZATION=0.15

# ============================================
# PERFORMANCE & OPTIMIZATION
# ============================================

# Parallel processing
MAX_CONCURRENT_REQUESTS=5
MAX_CONCURRENT_DOWNLOADS=3
MAX_CONCURRENT_TTS_CHUNKS=2

# Retry configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_BASE=2
RETRY_MAX_WAIT=60

# Cache settings
CACHE_MAX_SIZE_MB=1000
CACHE_TTL_HOURS=168  # 7 days

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# ============================================
# DATABASE CONFIGURATION
# ============================================

# SQLite database for research and metadata
DATABASE_PATH=data/yt_faceless.db

# Redis cache (optional, for distributed caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TTL_SECONDS=3600

# ============================================
# MONITORING & LOGGING
# ============================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE_MB=100

# Error tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Analytics tracking (optional)
ANALYTICS_ENABLED=false
ANALYTICS_ENDPOINT=

# ============================================
# DEVELOPMENT & TESTING
# ============================================

# Development mode
DEBUG=false
TESTING=false
DRY_RUN=false

# Test configuration
TEST_MODE=false
TEST_OUTPUT_DIR=tests/output
TEST_SKIP_API_CALLS=false

# Mock data for testing
USE_MOCK_TTS=false
USE_MOCK_RESEARCH=false
USE_MOCK_UPLOAD=false

# ============================================
# SECURITY & COMPLIANCE
# ============================================

# Content moderation
ENABLE_CONTENT_MODERATION=true
CONTENT_MODERATION_THRESHOLD=0.8

# Copyright detection
ENABLE_COPYRIGHT_CHECK=true
COPYRIGHT_CHECK_THRESHOLD=0.9

# YouTube policy compliance
ENABLE_POLICY_CHECK=true
POLICY_CHECK_STRICT=false

# Data retention
DATA_RETENTION_DAYS=90
PII_REDACTION_ENABLED=true

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
FEATURE_AUTO_THUMBNAIL=false
FEATURE_AUTO_CHAPTERS=true
FEATURE_AUTO_SUBTITLES=true
FEATURE_AUTO_ENDSCREEN=true
FEATURE_AB_TESTING=false
FEATURE_SHORTS_GENERATION=false
FEATURE_MULTI_LANGUAGE=false

# ============================================
# SCHEDULING & AUTOMATION
# ============================================

# Upload scheduling
DEFAULT_UPLOAD_TIME=14:00
UPLOAD_TIMEZONE=America/New_York
SCHEDULE_BUFFER_HOURS=24

# Batch processing
BATCH_SIZE=10
BATCH_INTERVAL_MINUTES=60

# Auto-publish settings
AUTO_PUBLISH_ENABLED=false
AUTO_PUBLISH_REVIEW_REQUIRED=true